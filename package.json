{
    "name": "redis-drs",
    "version": "1.3.4",
    "description": "redis-drs - A Redis Dump, Restore and Sync Tool",
    "license": "GPL-3.0+",
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "bin": {
        "redis-drs": "lib/bin/cli.js"
    },
    "files": [
        "lib"
    ],
    "scripts": {
        "dev": "ts-node-dev --no-notify --respawn --transpile-only -r tsconfig-paths/register src/index",
        "dev:cli": "ts-node-dev --no-notify --respawn --transpile-only -r tsconfig-paths/register src/bin/cli",
        "build": "tsc",
        "prebuild": "npm run clean",
        "bundle": "node esbuild.config.js",
        "bundle:dev": "npm run esbuild -- --watch",
        "npm:login": "npm adduser",
        "publish": "npm publish --access public",
        "lint": "eslint \"{src,test}/**/*.ts\" --fix",
        "test": "jest -o --detectOpenHandles",
        "clean": "rimraf lib bundle",
        "format": "prettier --write --ignore-unknown ."
    },
    "keywords": [
        "redis",
        "dump",
        "restore",
        "backup",
        "sync"
    ],
    "author": {
        "name": "Muhammad Shaban",
        "email": "muhammad.shaban.dev@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/mohamed-rekiba/redis-drs"
    },
    "dependencies": {
        "event-stream": "^4.0.1",
        "ioredis": "^5.2.4",
        "progress": "^2.0.3",
        "yargs": "^17.6.2"
    },
    "devDependencies": {
        "@types/eslint": "^8.4.10",
        "@types/event-stream": "^4.0.0",
        "@types/jest": "^29.2.3",
        "@types/node": "^18.11.9",
        "@types/progress": "^2.0.5",
        "@types/yargs": "^17.0.14",
        "@typescript-eslint/parser": "^5.44.0",
        "esbuild": "^0.15.15",
        "eslint": "^8.28.0",
        "husky": "^8.0.2",
        "jest": "^29.3.1",
        "pre-commit": "^1.2.2",
        "prettier": "^2.8.0",
        "rimraf": "^3.0.2",
        "ts-jest": "^29.0.3",
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.1.0",
        "typescript": "^4.9.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*": [
            "npm run format",
            "npm run lint",
            "git add"
        ]
    }
}